[Unit]
Description=Parity Ethereum application
Requires=network.target

[Service]
Type=simple
User={{ geth_user }} 
Restart=on-failure
ExecStart=/usr/bin/parity --port {{ p2p }} --no-ws \
       --jsonrpc-port {{ sport }}  --jsonrpc-interface 127.0.0.1 \
       --jsonrpc-cors all --jsonrpc-hosts all \
       --jsonrpc-apis=safe,-parity \
       --db-path=/home/ubuntu/blockchains/parity/chains/ \
       --no-warp

[Install]
WantedBy=default.target
